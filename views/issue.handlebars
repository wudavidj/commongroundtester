  $(document).ready(function(){
    var moodValue = localStorage.getItem('moods');
    var moodValueWithoutPNG = moodValue.replace(".png", "_white.png");
    var image = "../images/" + moodValueWithoutPNG;
    $(".mood-icon").append("<img class='pic' src='" + image + "'/>");
      var moodWord = moodValue.substring(0, moodValue.length - 4);
    $(".mood-current").html(moodWord);
    var titleVal = localStorage.getItem("newlyCreatedTitle");
    $("#dropdown-content").append('<a href="/newIssue"><button class="issueTitle">' + titleVal + '</button></a><div></div>');
     });



    $(".not-filled-in").click(function(){
      $(".completed").hide();
    });

    $(".advice-checkbox").click(function() {
      $(this).css({"background-color":"#33cc99", "border-color":"white"});
    });

    $(".question-button").click(function() {
      $(this).css({"background-color":"#33cc99", "color":"white"});
    });


</script>
</html>
