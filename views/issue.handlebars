</head>
<body style="margin: 0;">
  <div class="navbar">
    <a class="navbar-new" href="/homePage">
      <img src="/images/homeIcon.png" style="width: 16px"></img>
    </a>
    <div class="navbar-title">
      HBAR: {Title}
    </div>
    <div class="navbar-settings">
      <div class="dropdown">
        <button class="dropbtn">&#9776;</button>
        <div id="dropdown-content" style="right:0">
          <a href="/settings">Settings</a>
          <a href="/logOut">Log Out</a>
        </div>
      </div>
    </div>
  </div>

<div class="main-content-area">
  <a href="/moodLog">
    <div class="mood">
      <div class="mood-text-area">
        <div class="mood-title">RECENT MOOD LOG</div>
        <div class="mood-current">HBAR: Mood</div>
        <div class="mood-suggestion">Learn More â†’</div>
      </div>
      <div class="mood-icon"></div>
    </div>
  </a>

<div class="advice-content-area">
    <h1 class="heading">Advice</h1>
    <table>
      <tr>
        <td><button class="advice-checkbox"></button></td>
        <td class="advice-text-box">HBAR Advice 1</td>
      </tr>
      <tr>
        <td><button class="advice-checkbox"></button></td>
        <td class="advice-text-box">HBAR Advice 2</td>
      </tr>
      <tr>
        <td><button class="advice-checkbox"></button></td>
        <td class="advice-text-box">HBAR Advice 3</td>
      </tr>
    </table>
  <div class="question-content-area">
    <h1 class="heading">Additional Questions</h1>
    <div class="question-box">
      <div class="question-text">HHBAR Question
      </div>
      <div class="question-answers">
        <button class="question-button">HBAR Q/A 1
        </button>
        <button class="question-button">HBAR Q/A 2
        </button>
        <button class="question-button">HBAR Q/A 3
        </button>
      </div>
    </div>
    <div class="final-options">
          <a href="./history">
          <button class="filled-in">History
          </button>
        </a>
          <div></div>
          <div class="completed">
          <button class="not-filled-in" onclick="pop()" href="/homePage">Mark Issue as Completed
          </button>
        </div>
        </div>

</div>
</body>
<script>
// Get the container element
var btnContainer = document.getElementById("dropdown-content");

// Get all buttons with class="btn" inside the container
var btns = btnContainer.getElementsByClassName("issueTitle");

// Loop through the buttons and add the active class to the current/clicked button
for (var i = 0; i < btns.length; i++) {
  // click listener
  btns[i].addEventListener("click", function() {

  // get the "active" class
  var current = document.getElementsByClassName("active");

  // turn "active" inactive
  current[0].className = current[0].className.replace(" active", "");

  // turn clicked class "active"
  this.className += " active";

  // get the title of new "active" class
  var newActive = document.getElementsByClassName(" active");
  localStorage.setItem('selectedIssue', newActive[0].textContent);

  // .html title (needs [0] because newActive is an array)
  $(".title-sample").html(newActive[0].textContent);

});
}

  function pop(){
    alert("You have marked this issue as completed!");
  }
